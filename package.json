{
  "name": "iam-service",
  "version": "1.0.0",
  "description": "IAM Service",
  "main": "dist/src/app.js",
  "scripts": {
    "start": "node dist/src/app.js",
    "dev": "tsx watch --clear-screen=false src/app.ts",
    "build": "tsc --project tsconfig.build.json && tsc-alias",
    "test:unit": "jest --coverage --config jest.config.ts tests/unit",
    "test:integration": "jest --runInBand --config jest.config.ts tests/integration",
    "format": "prettier --write './**/*.{js,ts,json,md,yml,mjs}'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "migration:generate": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:generate -d src/database/config/typeorm.config.ts",
    "migration:run": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:run -d src/database/config/typeorm.config.ts",
    "migration:revert": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:revert -d src/database/config/typeorm.config.ts",
    "migration:run:prod": "npx typeorm migration:run -d dist/src/database/config/typeorm.config",
    "migration:revert:prod": "npx typeorm migration:revert -d dist/src/database/config/typeorm.config",
    "seed": "ts-node -r tsconfig-paths/register node_modules/typeorm-extension/bin/cli.cjs seed:run -d src/database/config/typeorm.config.ts"
  },
  "author": "Damir Perkosan",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dperkosan/iam-service.git"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.16",
    "pg": "^8.13.1",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@faker-js/faker": "^9.4.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typeorm-extension": "^3.6.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
