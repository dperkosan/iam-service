{
  "name": "iam-service",
  "version": "1.0.0",
  "description": "IAM Service",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "tsx watch --clear-screen=false src/app.ts",
    "build": "tsc && tsc-alias",
    "test": "jest --config jest.config.ts",
    "format": "prettier --write './**/*.{js,ts,json,md,yml,mjs}'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "migration:generate": "npx typeorm migration:generate -d dist/database/config/typeorm.config",
    "migration:run": "npx typeorm migration:run -d dist/database/config/typeorm.config",
    "migration:revert": "npx typeorm migration:revert -d dist/database/config/typeorm.config",
    "seed": "npx typeorm-extension seed:run -d dist/database/config/typeorm.config"
  },
  "author": "Damir Perkosan",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dperkosan/iam-service.git"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "pg": "^8.13.1",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typeorm-extension": "^3.6.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
